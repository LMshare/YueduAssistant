        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/card_cache_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/card_cache_book_source"
                style="@style/CardPromptText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_cache_book_name"
                android:layout_alignStart="@id/card_cache_book_name"
                android:layout_marginTop="8dp"
                android:text="@string/scan_book_source"
                android:textColor="?android:attr/textColorPrimary" />

        </RelativeLayout>

